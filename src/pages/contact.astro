---
import Layout from '../layouts/Layout.astro';
import { personalInfo } from '../data/info.ts';
---

<Layout title="Contacto - Nicolas Moreno" description="Ponte en contacto conmigo para colaboraciones, proyectos o consultas profesionales.">
  <!-- Hero Section con animación de partículas -->
  <section class="min-h-screen relative overflow-hidden bg-gradient-to-br from-gray-900 via-primary-900/20 to-gray-900">
    <!-- Fondo animado con partículas flotantes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="floating-particles"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_25%_25%,rgba(14,165,233,0.1),transparent_50%)] animate-pulse"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_75%_75%,rgba(139,92,246,0.1),transparent_50%)] animate-pulse delay-1000"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 relative z-10">
      <!-- Título principal con efecto de gradiente -->
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="text-6xl md:text-8xl font-bold mb-6 bg-gradient-to-r from-primary-400 via-purple-500 to-primary-600 bg-clip-text text-transparent animate-gradient-x">
          Contacto
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
          ¿Tienes un proyecto en mente? ¡Hablemos y hagamos realidad esa idea increíble!
        </p>
        <div class="w-32 h-1 bg-gradient-to-r from-primary-500 to-purple-500 mx-auto mt-8 rounded-full animate-pulse"></div>
      </div>

      <!-- Grid principal -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <!-- Formulario de contacto -->
        <div class="contact-form-container animate-slide-in-left">
          <div class="bg-gray-800/30 backdrop-blur-xl border border-gray-700/50 rounded-3xl p-8 shadow-2xl hover:shadow-gray-500/20 transition-all duration-500">
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-white mb-4 flex items-center">
                <span class="w-3 h-3 bg-primary-500 rounded-full mr-3 animate-pulse"></span>
                Envíame un mensaje
              </h2>
              <p class="text-gray-400">Completa el formulario y te responderé lo antes posible</p>
            </div>

            <form class="contact-form space-y-6" id="contactForm">
              <!-- Campo Nombre -->
              <div class="form-group">
                <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
                  Nombre completo
                </label>
                <div class="relative">
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent transition-all duration-300 hover:border-gray-400"
                    placeholder="Tu nombre completo"
                  >
                  <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-gray-500/20 to-gray-600/20 opacity-0 transition-opacity duration-300 pointer-events-none input-glow"></div>
                </div>
              </div>

              <!-- Campo Email -->
              <div class="form-group">
                <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                  Correo electrónico
                </label>
                <div class="relative">
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300 hover:border-primary-400"
                    placeholder="tu@email.com"
                  >
                  <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-primary-500/20 to-purple-500/20 opacity-0 transition-opacity duration-300 pointer-events-none input-glow"></div>
                </div>
              </div>

              <!-- Campo Asunto -->
              <div class="form-group">
                <label for="subject" class="block text-sm font-medium text-gray-300 mb-2">
                  Asunto
                </label>
                <div class="relative">
                  <select 
                    id="subject" 
                    name="subject" 
                    required 
                    class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300 hover:border-primary-400"
                  >
                    <option value="">Selecciona un asunto</option>
                    <option value="proyecto">Nuevo proyecto</option>
                    <option value="colaboracion">Colaboración</option>
                    <option value="consulta">Consulta técnica</option>
                    <option value="trabajo">Oportunidad laboral</option>
                    <option value="otro">Otro</option>
                  </select>
                  <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-primary-500/20 to-purple-500/20 opacity-0 transition-opacity duration-300 pointer-events-none input-glow"></div>
                </div>
              </div>

              <!-- Campo Mensaje -->
              <div class="form-group">
                <label for="message" class="block text-sm font-medium text-gray-300 mb-2">
                  Mensaje
                </label>
                <div class="relative">
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5" 
                    required 
                    class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent transition-all duration-300 hover:border-gray-400 resize-none"
                    placeholder="Cuéntame sobre tu proyecto o consulta..."
                  ></textarea>
                  <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-primary-500/20 to-purple-500/20 opacity-0 transition-opacity duration-300 pointer-events-none input-glow"></div>
                </div>
              </div>

              <!-- Botón de envío -->
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-gray-500/25 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 focus:ring-offset-gray-900 submit-btn"
              >
                <span class="flex items-center justify-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                  Enviar mensaje
                </span>
              </button>
            </form>
          </div>
        </div>

        <!-- Información de contacto y mapa -->
        <div class="space-y-8 animate-slide-in-right">
          <!-- Información de contacto -->
          <div class="bg-gray-800/30 backdrop-blur-xl border border-gray-700/50 rounded-3xl p-8 shadow-2xl hover:shadow-gray-500/20 transition-all duration-500">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
              <span class="w-3 h-3 bg-green-500 rounded-full mr-3 animate-pulse"></span>
              Información de contacto
            </h3>
            
            <div class="space-y-6">
              <!-- Email -->
              <div class="contact-item group">
                <div class="flex items-center space-x-4 p-4 rounded-xl bg-gray-900/30 hover:bg-gray-900/50 transition-all duration-300 hover:scale-105">
                  <div class="w-12 h-12 bg-gradient-to-br from-gray-600 to-gray-700 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Email</p>
                    <a href={`mailto:${personalInfo.email}`} class="text-white hover:text-gray-400 transition-colors font-medium">
                      {personalInfo.email}
                    </a>
                  </div>
                </div>
              </div>

              <!-- Teléfono -->
              <div class="contact-item group">
                <div class="flex items-center space-x-4 p-4 rounded-xl bg-gray-900/30 hover:bg-gray-900/50 transition-all duration-300 hover:scale-105">
                  <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Teléfono</p>
                    <a href={`tel:${personalInfo.phone}`} class="text-white hover:text-gray-400 transition-colors font-medium">
                      {personalInfo.phone}
                    </a>
                  </div>
                </div>
              </div>

              <!-- Ubicación -->
              <div class="contact-item group">
                <div class="flex items-center space-x-4 p-4 rounded-xl bg-gray-900/30 hover:bg-gray-900/50 transition-all duration-300 hover:scale-105">
                  <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm text-gray-400">Ubicación</p>
                    <p class="text-white font-medium">{personalInfo.location}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Mapa interactivo -->
          <div class="bg-gray-800/30 backdrop-blur-xl border border-gray-700/50 rounded-3xl p-8 shadow-2xl hover:shadow-primary-500/20 transition-all duration-500">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
              <span class="w-3 h-3 bg-gray-500 rounded-full mr-3 animate-pulse"></span>
              Ubicación
            </h3>
            
            <div class="relative overflow-hidden rounded-xl group">
              <div class="map-container h-64 bg-gray-900/50 rounded-xl flex items-center justify-center relative overflow-hidden">
                <!-- Mapa placeholder con efecto de carga -->
                <div class="absolute inset-0 bg-gradient-to-br from-gray-500/20 to-gray-600/20 animate-pulse"></div>
                <iframe 
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126916.61073809283!2d-73.1198!3d7.1193!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e683f4b9b8d4c5b%3A0x4b9b8d4c5b8d4c5b!2sBucaramanga%2C%20Santander%2C%20Colombia!5e0!3m2!1ses!2sco!4v1234567890123"
                  width="100%" 
                  height="100%" 
                  style="border:0;" 
                  allowfullscreen="" 
                  loading="lazy" 
                  referrerpolicy="no-referrer-when-downgrade"
                  class="rounded-xl filter grayscale hover:grayscale-0 transition-all duration-500 relative z-10"
                ></iframe>
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/20 to-transparent pointer-events-none"></div>
              </div>
            </div>
          </div>

          <!-- Redes sociales -->
          <div class="bg-gray-800/30 backdrop-blur-xl border border-gray-700/50 rounded-3xl p-8 shadow-2xl hover:shadow-primary-500/20 transition-all duration-500">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center">
              <span class="w-3 h-3 bg-gray-500 rounded-full mr-3 animate-pulse"></span>
              Sígueme en redes
            </h3>
            
            <div class="grid grid-cols-2 gap-4">
              <a href={personalInfo.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" 
                 class="social-link group flex items-center space-x-3 p-4 rounded-xl bg-gradient-to-br from-blue-600/20 to-blue-800/20 hover:from-blue-600/40 hover:to-blue-800/40 border border-blue-600/30 hover:border-blue-500 transition-all duration-300 hover:scale-105">
                <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <span class="text-white font-medium">LinkedIn</span>
              </a>

              <a href={personalInfo.socialLinks.github} target="_blank" rel="noopener noreferrer" 
                 class="social-link group flex items-center space-x-3 p-4 rounded-xl bg-gradient-to-br from-gray-700/20 to-gray-900/20 hover:from-gray-700/40 hover:to-gray-900/40 border border-gray-600/30 hover:border-gray-500 transition-all duration-300 hover:scale-105">
                <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </div>
                <span class="text-white font-medium">GitHub</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Animaciones personalizadas */
  @keyframes gradient-x {
    0%, 100% {
      background-size: 200% 200%;
      background-position: left center;
    }
    50% {
      background-size: 200% 200%;
      background-position: right center;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slide-in-right {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes particle-float {
    0% {
      transform: translateY(100vh) translateX(0) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100vh) translateX(100px) rotate(360deg);
      opacity: 0;
    }
  }

  /* Clases de animación */
  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .animate-slide-in-left {
    animation: slide-in-left 0.8s ease-out;
  }

  .animate-slide-in-right {
    animation: slide-in-right 0.8s ease-out 0.2s both;
  }

  /* Partículas flotantes */
  .floating-particles {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
  }

  .floating-particles::before,
  .floating-particles::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: linear-gradient(45deg, #6b7280, #9ca3af);
    border-radius: 50%;
    animation: particle-float 15s linear infinite;
  }

  .floating-particles::before {
    top: 20%;
    left: 20%;
    animation-delay: -5s;
  }

  .floating-particles::after {
    top: 60%;
    left: 80%;
    animation-delay: -10s;
  }

  /* Efectos de formulario */
  .form-group:focus-within .input-glow {
    opacity: 1;
  }

  .contact-form input:focus,
  .contact-form textarea:focus,
  .contact-form select:focus {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(107, 114, 128, 0.2);
  }

  .submit-btn:hover {
    box-shadow: 0 15px 35px rgba(107, 114, 128, 0.3);
  }

  /* Efectos de hover para elementos de contacto */
  .contact-item:hover {
    transform: translateX(5px);
  }

  .social-link:hover {
    box-shadow: 0 10px 25px rgba(107, 114, 128, 0.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .animate-slide-in-left,
    .animate-slide-in-right {
      animation: fade-in 0.8s ease-out;
    }
  }
</style>

<script>
  // Funcionalidad del formulario
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;
    
    // Animación de entrada para elementos
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in');
        }
      });
    }, observerOptions);
    
    // Observar elementos para animaciones
    document.querySelectorAll('.contact-item, .social-link').forEach(el => {
      observer.observe(el);
    });
    
    // Manejo del formulario
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Cambiar estado del botón
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = `
        <span class="flex items-center justify-center">
          <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Enviando...
        </span>
      `;
      submitBtn.disabled = true;
      
      // Simular envío (aquí integrarías con tu backend)
      setTimeout(() => {
        // Mostrar mensaje de éxito
        const successMessage = document.createElement('div');
        successMessage.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 animate-fade-in';
        successMessage.textContent = '¡Mensaje enviado correctamente! Te responderé pronto.';
        document.body.appendChild(successMessage);
        
        // Limpiar formulario
        form.reset();
        
        // Restaurar botón
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
        
        // Remover mensaje después de 5 segundos
        setTimeout(() => {
          successMessage.remove();
        }, 5000);
      }, 2000);
    });
    
    // Efectos de partículas adicionales
    function createParticle() {
      const particle = document.createElement('div');
      particle.className = 'absolute w-1 h-1 bg-gray-400 rounded-full opacity-70';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = '100%';
      particle.style.animation = `particle-float ${15 + Math.random() * 10}s linear infinite`;
      
      const container = document.querySelector('.floating-particles');
      if (container) {
        container.appendChild(particle);
        
        // Remover partícula después de la animación
        setTimeout(() => {
          particle.remove();
        }, 25000);
      }
    }
    
    // Crear partículas periódicamente
    setInterval(createParticle, 3000);
  });
</script>