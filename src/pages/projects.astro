---
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects";

export const prerender = true;
---

<Layout title="Proyectos | Nicolas Moreno">
  <div class="pt-32 pb-20">
    <div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto mb-16 text-center">
      <h1 class="text-5xl md:text-7xl font-bold font-space mb-6">
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-purple-500"
        >
          Proyectos
        </span>
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Una colección de soluciones digitales innovadoras y experimentos
        técnicos.
      </p>
    </div>

    <Projects client:load />
  </div>
</Layout>
