---
import Layout from '../layouts/Layout.astro';
import { projects } from '../data/info.ts';
---

<Layout title="Proyectos - Nicolas Moreno" description="Explora los proyectos y desarrollos de Nicolas Moreno, especialista en desarrollo backend y fundador de TIKNO.">
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-primary-900 to-gray-900 relative overflow-hidden">
    <!-- Fondo animado con efectos premium -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-primary-900/50 to-gray-900">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(14,165,233,0.15),transparent_60%)] animate-pulse"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(14,165,233,0.1),transparent_60%)] animate-pulse delay-1000"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(14,165,233,0.05),transparent_70%)] animate-pulse delay-2000"></div>
    </div>
    
    <!-- Partículas flotantes premium -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-primary-400 rounded-full animate-ping delay-300"></div>
      <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-primary-300 rounded-full animate-ping delay-700"></div>
      <div class="absolute top-1/2 left-3/4 w-1.5 h-1.5 bg-primary-500 rounded-full animate-ping delay-1000"></div>
      <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-primary-600 rounded-full animate-ping delay-1500"></div>
      <div class="absolute bottom-1/4 left-1/2 w-2 h-2 bg-primary-400 rounded-full animate-ping delay-2000"></div>
    </div>
    
    <!-- Ondas de energía concéntricas -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <div class="w-96 h-96 border border-primary-500/10 rounded-full animate-ping" style="animation-duration: 4s;"></div>
        <div class="absolute inset-8 border border-primary-400/15 rounded-full animate-ping" style="animation-duration: 3s; animation-delay: 1s;"></div>
        <div class="absolute inset-16 border border-primary-300/20 rounded-full animate-ping" style="animation-duration: 2s; animation-delay: 0.5s;"></div>
      </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="space-y-8">
        <!-- Título principal con efectos holográficos -->
        <h1 class="text-5xl md:text-7xl font-bold mb-8 animate-slide-up">
          Mis <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-400 via-primary-500 to-primary-600 animate-glow">Proyectos</span>
        </h1>
        
        <!-- Subtítulo con animación de escritura -->
        <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto leading-relaxed animate-slide-up delay-300 relative">
          Explora mi portafolio de <span class="text-primary-400 font-semibold">desarrollos tecnológicos</span> y 
          <span class="text-primary-400 font-semibold">soluciones innovadoras</span>
          <span class="absolute inset-0 bg-gradient-to-r from-transparent via-primary-500/10 to-transparent animate-width-expand"></span>
        </p>
        
        <!-- Estadísticas rápidas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16 animate-slide-up delay-500 justify-center max-w-4xl mx-auto">
          <div class="bg-gray-800/60 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 hover:border-primary-500/50 transition-all duration-500 group">
            <div class="text-3xl font-bold text-primary-400 mb-2 group-hover:scale-110 transition-transform duration-300 text-center">{projects.length}+</div>
            <div class="text-gray-300 text-center">Proyectos Completados</div>
          </div>
          <div class="bg-gray-800/60 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 hover:border-primary-500/50 transition-all duration-500 group">
            <div class="text-3xl font-bold text-primary-400 mb-2 group-hover:scale-110 transition-transform duration-300 text-center">5+</div>
            <div class="text-gray-300 text-center">Tecnologías Dominadas</div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Proyectos Section -->
  <section class="py-20 bg-gradient-to-br from-gray-800 to-gray-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(14,165,233,0.05),transparent_70%)] animate-pulse"></div>
    <div class="absolute top-20 right-20 w-32 h-32 bg-primary-500/10 rounded-full blur-xl animate-bounce"></div>
    <div class="absolute bottom-20 left-20 w-24 h-24 bg-purple-500/10 rounded-full blur-xl animate-pulse"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Proyectos <span class="text-primary-500">Destacados</span>
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-primary-700 mx-auto rounded-full"></div>
        <p class="text-lg text-gray-300 mt-6 max-w-2xl mx-auto">
          Una selección de mis trabajos más representativos, desde startups hasta desarrollos web profesionales
        </p>
      </div>
      
      <!-- Grid de Proyectos -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {projects.map((project, index) => (
          <div class="bg-gray-800/60 backdrop-blur-sm border border-gray-700/50 rounded-3xl overflow-hidden hover:border-primary-500/50 transition-all duration-700 group hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/20">
            <!-- Imagen del proyecto con overlay -->
            <div class="relative h-64 bg-gradient-to-br from-primary-500/20 to-purple-500/20 overflow-hidden">
              <!-- Imagen real del proyecto -->
              <img 
                src={project.image} 
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent z-10"></div>
              <div class="absolute inset-0 bg-gradient-to-br from-primary-500/10 to-purple-500/10 group-hover:from-primary-500/20 group-hover:to-purple-500/20 transition-all duration-500"></div>
              
              <!-- Badge de proyecto destacado -->
              {project.featured && (
                <div class="absolute top-4 right-4 z-20">
                  <span class="bg-gradient-to-r from-yellow-400 to-yellow-600 text-gray-900 px-3 py-1 rounded-full text-sm font-bold">
                    ⭐ Destacado
                  </span>
                </div>
              )}
            </div>
            
            <!-- Contenido del proyecto -->
            <div class="p-8 space-y-6">
              <div>
                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors duration-300">
                  {project.title}
                </h3>
                <p class="text-gray-300 leading-relaxed">
                  {project.description}
                </p>
              </div>
              
              <!-- Tecnologías utilizadas -->
              <div class="space-y-3">
                <h4 class="text-sm font-semibold text-primary-400 uppercase tracking-wider">Tecnologías</h4>
                <div class="flex flex-wrap gap-2">
                  {project.tech.map((tech, techIndex) => (
                    <span class="px-3 py-1 bg-gray-700/50 text-gray-300 rounded-full text-sm border border-gray-600/50 hover:border-primary-500/50 hover:text-primary-400 transition-all duration-300">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Enlaces del proyecto -->
              <div class="flex gap-4 pt-4">
                {project.demo && (
                  <a 
                    href={project.demo} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex-1 bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-500 hover:to-primary-600 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-lg hover:shadow-primary-500/40 text-center relative overflow-hidden group/btn"
                  >
                    <span class="relative z-10 flex items-center justify-center gap-2">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      Ver Demo
                    </span>
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/25 to-transparent transform -skew-x-12 -translate-x-full group-hover/btn:translate-x-full transition-transform duration-700"></div>
                  </a>
                )}
                
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex-1 border-2 border-gray-600 text-gray-300 hover:border-primary-500 hover:text-primary-400 px-6 py-3 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 text-center relative overflow-hidden group/btn"
                  >
                    <span class="relative z-10 flex items-center justify-center gap-2">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      GitHub
                    </span>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Mensaje para más proyectos -->
      <div class="text-center mt-16">
        <div class="bg-gray-800/60 backdrop-blur-sm border border-gray-700/50 rounded-3xl p-8 hover:border-primary-500/50 transition-all duration-500 group">
          <div class="space-y-4">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl flex items-center justify-center text-2xl mx-auto group-hover:scale-110 transition-transform duration-300">
              🚀
            </div>
            <h3 class="text-2xl font-bold text-white group-hover:text-primary-400 transition-colors duration-300">
              Más Proyectos en Camino
            </h3>
            <p class="text-gray-300 max-w-md mx-auto">
              Constantemente trabajo en nuevos desarrollos y soluciones innovadoras. ¡Mantente atento para ver las próximas creaciones!
            </p>
            <div class="flex justify-center gap-2 mt-6">
              <div class="w-2 h-2 bg-primary-500 rounded-full animate-ping"></div>
              <div class="w-2 h-2 bg-primary-400 rounded-full animate-ping delay-300"></div>
              <div class="w-2 h-2 bg-primary-300 rounded-full animate-ping delay-600"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-gray-900 to-gray-800 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_40%,rgba(14,165,233,0.1),transparent_70%)] animate-pulse"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="space-y-8">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          ¿Tienes un <span class="text-primary-500">Proyecto</span> en Mente?
        </h2>
        
        <p class="text-xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
          Colaboremos para convertir tu idea en una solución tecnológica innovadora y funcional
        </p>
        
        <div class="flex gap-6 justify-center flex-wrap mt-12">
          <a href="/contact" class="bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-500 hover:to-primary-600 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/40 relative overflow-hidden group">
            <span class="relative z-10">Iniciar Proyecto</span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/25 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          </a>
          
          <a href="/about" class="border-2 border-primary-600 text-primary-400 hover:bg-primary-600 hover:text-white px-8 py-4 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-2xl hover:shadow-primary-500/40 relative overflow-hidden group">
            <span class="relative z-10">Conocer Más</span>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes widthExpand {
    0%, 100% {
      transform: translateX(-100%);
    }
    50% {
      transform: translateX(100%);
    }
  }
  
  @keyframes glow {
    0%, 100% {
      text-shadow: 0 0 20px rgba(14, 165, 233, 0.5);
    }
    50% {
      text-shadow: 0 0 30px rgba(14, 165, 233, 0.8), 0 0 40px rgba(14, 165, 233, 0.6);
    }
  }
  
  .animate-slide-up {
    animation: slideUp 0.8s ease-out;
  }
  
  .animate-slide-up.delay-300 {
    animation-delay: 0.3s;
    animation-fill-mode: both;
  }
  
  .animate-slide-up.delay-500 {
    animation-delay: 0.5s;
    animation-fill-mode: both;
  }
  
  .animate-width-expand {
    animation: widthExpand 2s ease-in-out infinite;
  }
  
  .animate-glow {
    animation: glow 2s ease-in-out infinite alternate;
  }
</style>
