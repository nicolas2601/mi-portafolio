---
import { personalInfo, projects } from '../data/info.ts';
---

<!-- Hero Section -->
<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-black via-gray-900 to-black relative overflow-hidden">
  <!-- Fondo animado con gradientes dinámicos mejorados -->
  <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900/50 to-black">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(255,255,255,0.05),transparent_60%)] animate-pulse"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(255,255,255,0.03),transparent_60%)] animate-pulse delay-1000"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(255,255,255,0.02),transparent_70%)] animate-pulse delay-2000"></div>
  </div>
  
  <!-- Ondas de energía -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
      <div class="w-96 h-96 border border-gray-500/10 rounded-full animate-ping" style="animation-duration: 4s;"></div>
      <div class="absolute inset-8 border border-gray-400/15 rounded-full animate-ping" style="animation-duration: 3s; animation-delay: 1s;"></div>
      <div class="absolute inset-16 border border-gray-300/20 rounded-full animate-ping" style="animation-duration: 2s; animation-delay: 0.5s;"></div>
    </div>
  </div>
  
  <!-- Partículas flotantes mejoradas -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-gray-400 rounded-full animate-ping delay-300"></div>
    <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-gray-300 rounded-full animate-ping delay-700"></div>
    <div class="absolute top-1/2 left-3/4 w-1.5 h-1.5 bg-gray-500 rounded-full animate-ping delay-1000"></div>
    <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-gray-200 rounded-full animate-ping delay-1500"></div>
    <div class="absolute top-2/3 left-1/6 w-1.5 h-1.5 bg-gray-600/70 rounded-full animate-pulse delay-800"></div>
    <div class="absolute top-1/6 right-2/3 w-1 h-1 bg-gray-400/60 rounded-full animate-pulse delay-1200"></div>
    <div class="absolute bottom-1/4 left-2/3 w-2 h-2 bg-gray-300/50 rounded-full animate-ping delay-2000"></div>
    <div class="absolute bottom-1/6 right-1/6 w-1 h-1 bg-gray-500/80 rounded-full animate-pulse delay-600"></div>
  </div>
  
  <!-- Líneas de conexión dinámicas -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="lineGradient1" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:rgba(255,255,255,0.3);stop-opacity:1" />
          <stop offset="50%" style="stop-color:rgba(255,255,255,0.1);stop-opacity:1" />
          <stop offset="100%" style="stop-color:rgba(255,255,255,0);stop-opacity:0" />
        </linearGradient>
      </defs>
      <path d="M100,200 Q300,100 500,300" stroke="url(#lineGradient1)" stroke-width="1" fill="none" opacity="0.6">
        <animate attributeName="opacity" values="0.3;0.8;0.3" dur="3s" repeatCount="indefinite"/>
      </path>
      <path d="M200,400 Q400,200 600,500" stroke="url(#lineGradient1)" stroke-width="1" fill="none" opacity="0.4">
        <animate attributeName="opacity" values="0.2;0.6;0.2" dur="4s" repeatCount="indefinite" begin="1s"/>
      </path>
    </svg>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Contenido de texto -->
      <div class="space-y-8 text-left animate-fade-in relative z-10">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight animate-slide-up relative text-white">
          Hola, soy <br>
          <span class="text-gray-200 relative inline-block">
            <span class="animate-pulse">{personalInfo.nm}</span>
            <span class="absolute inset-0 bg-gradient-to-r from-gray-400 to-gray-600 opacity-20 blur-lg animate-glow"></span>
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 animate-slide-up delay-300 relative">
          <span class="relative z-10">{personalInfo.title}</span>
          <span class="absolute inset-0 bg-gradient-to-r from-transparent via-gray-500/10 to-transparent animate-width-expand"></span>
        </p>
        <div class="flex gap-4 flex-wrap">

          
          <a href="/projects" class="bg-gradient-to-r from-gray-800 to-gray-900 hover:from-gray-700 hover:to-gray-800 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-2xl hover:shadow-gray-500/40 animate-slide-up delay-1000 relative overflow-hidden group">
            <span class="relative z-10">Ver Proyectos</span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/25 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
            <div class="absolute inset-0 bg-gray-400/20 rounded-lg blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>
          
          <a href="/contact" class="border-2 border-gray-600 text-gray-400 hover:bg-gray-600 hover:text-white px-8 py-4 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-2xl hover:shadow-gray-500/40 animate-slide-up delay-1200 relative overflow-hidden group">
            <span class="relative z-10">Contactar</span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-gray-400/25 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
            <div class="absolute inset-0 border-2 border-gray-400/30 rounded-lg blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>

          <a href="/public/Nicolas_Moreno_CV_v1.pdf" download="Nicolas_Moreno_CV_v1.pdf" class="border-2 border-gray-600 text-gray-400 hover:bg-gray-600 hover:text-white px-8 py-4 rounded-lg font-semibold transition-all duration-500 transform hover:scale-105 hover:shadow-2xl hover:shadow-gray-500/40 animate-slide-up delay-1200 relative overflow-hidden group">
            <span class="relative z-10">Descargar CV</span>
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-gray-400/25 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
            <div class="absolute inset-0 border-2 border-gray-400/30 rounded-lg blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>
          
        </div>
      </div>
      
      <!-- Área de imagen/visual -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Imagen del perfil con efectos mejorados -->
          <div class="relative flex justify-center lg:justify-end animate-fade-in delay-500">
            <div class="relative">
              <!-- Imagen principal con efectos holográficos -->
              <div class="w-80 h-80 md:w-96 md:h-96 relative">
                <!-- Fondo con gradiente animado -->
                <div class="absolute inset-0 bg-gradient-to-br from-gray-500 via-gray-600 to-gray-700 rounded-full animate-pulse">
                  <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-gray-400/30 to-transparent rounded-full animate-spin" style="animation-duration: 8s;"></div>
                </div>
                
                <!-- Marco con efecto de energía -->
                <div class="absolute inset-1 bg-gradient-to-br from-gray-800 via-gray-900 to-black rounded-full p-1">
                  <div class="w-full h-full bg-gray-900 rounded-full overflow-hidden relative">
                    <img 
                      src={personalInfo.avatar} 
                      alt="Nicolas Moreno - Desarrollador Backend" 
                      class="w-full h-full object-cover transition-transform duration-700 hover:scale-110"
                    />
                    <!-- Overlay holográfico -->
                    <div class="absolute inset-0 bg-gradient-to-br from-gray-500/10 via-transparent to-gray-700/10 opacity-0 hover:opacity-100 transition-opacity duration-500"></div>
                  </div>
                </div>
              </div>
              
              <!-- Anillos orbitales mejorados -->
              <div class="absolute inset-0 animate-spin" style="animation-duration: 25s;">
                <div class="absolute inset-0 border-2 border-gray-500/40 rounded-full">
                  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-3 h-3 bg-gray-400 rounded-full animate-pulse"></div>
                </div>
                <div class="absolute top-6 left-6 right-6 bottom-6 border border-gray-400/25 rounded-full">
                  <div class="absolute bottom-0 right-1/4 transform translate-x-1/2 translate-y-1/2 w-2 h-2 bg-gray-300 rounded-full animate-pulse delay-500"></div>
                </div>
              </div>
              
              <div class="absolute inset-0 animate-spin" style="animation-duration: 18s; animation-direction: reverse;">
                <div class="absolute top-12 left-12 right-12 bottom-12 border border-gray-300/20 rounded-full">
                  <div class="absolute left-0 top-1/3 transform -translate-x-1/2 -translate-y-1/2 w-2 h-2 bg-gray-500 rounded-full animate-pulse delay-1000"></div>
                </div>
              </div>
              
              <!-- Anillo exterior con partículas -->
              <div class="absolute -inset-8 animate-spin" style="animation-duration: 30s;">
                <div class="absolute inset-0 border border-gray-600/15 rounded-full">
                  <div class="absolute top-1/4 right-0 transform translate-x-1/2 -translate-y-1/2 w-1.5 h-1.5 bg-gray-600 rounded-full animate-ping"></div>
                  <div class="absolute bottom-1/4 left-0 transform -translate-x-1/2 translate-y-1/2 w-1 h-1 bg-gray-400 rounded-full animate-ping delay-700"></div>
                </div>
              </div>
              
              <!-- Efectos de energía y brillo -->
              <div class="absolute inset-0 bg-gradient-to-br from-gray-400/20 via-transparent to-gray-600/20 rounded-full animate-glow"></div>
              <div class="absolute inset-0 bg-gradient-to-tl from-transparent via-gray-300/10 to-transparent rounded-full animate-pulse" style="animation-duration: 3s;"></div>
              
              <!-- Partículas decorativas mejoradas -->
              <div class="absolute -top-6 -left-6 w-4 h-4 bg-gradient-to-br from-gray-400 to-gray-600 rounded-full animate-bounce shadow-lg shadow-gray-500/50"></div>
              <div class="absolute -top-3 -right-8 w-3 h-3 bg-gradient-to-br from-gray-300 to-gray-500 rounded-full animate-bounce delay-300 shadow-lg shadow-gray-400/40"></div>
              <div class="absolute -bottom-8 -left-3 w-3 h-3 bg-gradient-to-br from-gray-500 to-gray-700 rounded-full animate-bounce delay-700 shadow-lg shadow-gray-600/40"></div>
              <div class="absolute -bottom-6 -right-6 w-4 h-4 bg-gradient-to-br from-gray-600 to-gray-800 rounded-full animate-bounce delay-1000 shadow-lg shadow-gray-700/50"></div>
              
              <!-- Elementos flotantes adicionales con efectos -->
              <div class="absolute top-1/4 -left-10 w-5 h-5 bg-gradient-to-br from-gray-400/80 to-gray-600/60 rounded-full animate-float shadow-lg shadow-gray-500/30"></div>
              <div class="absolute bottom-1/3 -right-10 w-4 h-4 bg-gradient-to-br from-gray-300/70 to-gray-500/50 rounded-full animate-float delay-800 shadow-lg shadow-gray-400/25"></div>
              <div class="absolute top-2/3 -left-6 w-2 h-2 bg-gray-200 rounded-full animate-ping delay-1200"></div>
              <div class="absolute top-1/6 -right-4 w-2 h-2 bg-gray-500 rounded-full animate-ping delay-400"></div>
              
              <!-- Rayos de energía -->
              <div class="absolute inset-0 pointer-events-none">
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-1 h-32 bg-gradient-to-t from-transparent via-gray-400/30 to-transparent animate-pulse" style="animation-duration: 2s;"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-1 bg-gradient-to-r from-transparent via-gray-400/30 to-transparent animate-pulse delay-1000" style="animation-duration: 2s;"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>