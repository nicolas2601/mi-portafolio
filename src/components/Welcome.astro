---
import { personalInfo, projects } from '../data/info.ts';
---

<!-- Hero Section -->
<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-primary-900 to-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Contenido de texto -->
      <div class="space-y-8 text-left">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight">
          Hola, soy <br>
          <span class="text-primary-500">{personalInfo.nm}</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300">
          {personalInfo.title}
        </p>
        <p class="text-lg text-gray-400 leading-relaxed">
          {personalInfo.bio}
        </p>
        <div class="flex gap-4">
          <a href="/projects" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-3 rounded-full font-semibold transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-primary-500/25">
            Ver Proyectos
          </a>
          <a href="/contact" class="border-2 border-primary-500 text-primary-400 hover:bg-primary-500 hover:text-white px-8 py-3 rounded-full font-semibold transform hover:scale-105 transition-all duration-300">
            Contactar
          </a>
        </div>
      </div>
      
      <!-- Área de imagen/visual -->
      <div class="relative flex justify-center lg:justify-end">
        <div class="relative">
          <!-- Imagen de perfil con efectos -->
          <div class="relative w-80 h-80 md:w-96 md:h-96">
            <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-primary-700 rounded-full blur-xl opacity-30 animate-pulse"></div>
            <div class="relative w-full h-full bg-gradient-to-br from-gray-800 to-gray-900 rounded-full border-4 border-primary-500/30 overflow-hidden shadow-2xl">
              <img 
                src="/src/assets/Perfil.jpg" 
                alt="Nicolas Moreno - Desarrollador Backend" 
                class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
              />
            </div>
          </div>
          
          <!-- Elementos decorativos flotantes -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-primary-500/20 rounded-full animate-bounce delay-1000"></div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-primary-400/20 rounded-full animate-bounce delay-500"></div>
          <div class="absolute top-1/2 -right-8 w-12 h-12 bg-primary-600/20 rounded-full animate-pulse"></div>
        </div>
      </div>
    </div>
  </div>
</section>